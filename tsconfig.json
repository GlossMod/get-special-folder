{
    "compilerOptions": {
        "target": "es2022",
        "module": "NodeNext",
        "isolatedModules": true,
        "strict": true,
        "verbatimModuleSyntax": false,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "NodeNext",
        "allowImportingTsExtensions": true,
        "sourceMap": false
    },
    "include": [
        "src/*.ts"
    ]
}